# Application
APP_NAME=MethaX
ENV=development
LOG_LEVEL=INFO
TZ=Asia/Kolkata

# Database
# For PostgreSQL (production):
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/methax
# For SQLite (development):
DATABASE_URL=sqlite+aiosqlite:///./methax.db

# Trading Parameters
DEFAULT_CAPITAL=100000
MAX_DAILY_TRADES=2
RISK_PER_TRADE=0.01
MAX_DAILY_LOSS_R=1.0
MAX_POSITION_TIME_MINUTES=30

# Market Hours (IST)
MARKET_OPEN_TIME=09:15
MARKET_CLOSE_TIME=15:30
NO_TRADE_START=09:15
NO_TRADE_END_MORNING=09:30
NO_TRADE_START_EOD=14:45

# Indicator Periods
EMA_FAST_PERIOD=10
EMA_SLOW_PERIOD=20
DEMA_TREND_PERIOD=100
ATR_PERIOD=14

# Options
NIFTY_LOT_SIZE=25
STRIKE_INTERVAL=50
DEFAULT_VOLATILITY=0.15

# Data Source
USE_MOCK_DATA=true
NSE_API_KEY=your_api_key_here

# WebSocket
WS_UPDATE_INTERVAL_SECONDS=5
WS_POSITION_UPDATE_INTERVAL_SECONDS=10

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
